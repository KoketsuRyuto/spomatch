<table class="table table-hover table-bordered align-middle">
  <thead>
    <th class="text-center">投稿タグ一覧</th>
  </thead>
  <tbody>
    <% tags.each do |tag| %>
      <tr>
        <td class="text-center"><%= link_to tag.name, search_tag_path(tag_id: tag.id) %><%= "(#{tag.posts.count})" %></td>
      </tr>
    <% end %>
  </tbody>
</table>