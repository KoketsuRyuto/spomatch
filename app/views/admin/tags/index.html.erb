<div class="container mb-3">
  <%= render 'public/shared/error_messages', resource: @tag %>
  <div class="row mt-5">
    <div class="col-md-8 mx-auto">
      <h4 class="text-center">タグ一覧・追加</h4>
      <%= form_with model: @tag, url: admin_tags_path, method: :post, local: true do |f| %>
        <%= render "form", f: f %>
      <% end %>
      <%= render "admin/tags/index", tags: @tags %>
      <%= paginate @tags %>
    </div>
  </div>
</div>