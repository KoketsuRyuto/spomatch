<div class="container">
  <div class="row mt-5 mb-3 d-flex justify-content-center">
    <div class="col-md-6 mx-auto">
      <div class="card shadow">
        <div class="card-header text-center bg-dark text-white">管理者ログイン</div>
        <div class="card-body">
          <%= form_with model: resource, url: new_admin_session_path do |f| %>
            <div class="form-group row mt-4 mx-2">
              <%= f.label :email, "メールアドレス" %><br/>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
            </div>
          
            <div class="form-group row mt-4 mx-2">
              <%= f.label :password, "パスワード" %><br/>
              <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
            </div>
          
            <div class="actions d-flex justify-content-center">
              <%= f.submit "ログイン", class:"btn btn-primary my-3" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>