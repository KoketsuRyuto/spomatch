<div class="container my-5">
  <div class="row mt-5">
    <div class="col-md-10 mx-auto">
      <h5>タグが<%=@tag.name%>の投稿一覧</h5>
      <!--タグリスト-->
      <div class="tag-list">
        <label class="mt-3 border-bottom">
          <% @tags.each do |tag|%>
            <%=link_to tag.name,search_tag_path(tag_id: tag.id) %>
            <%="(#{tag.posts.size})" %>
          <% end %>
        </label>
      </div>
      <!--投稿を表示-->
      <div class="post-list card">
        <div class="card-body">
          <% @posts.each do |post| %>
            <table class="table table-sm table-borderless">
              <tr class="border-bottom">
                <td>
                  <%= link_to post.user.name, user_path(post) %><br>
                  <%= link_to post.title, post_path(post) %><br>
                  <%= post.body.truncate(20) %><br>
                  <small class="text-muted"><%= post.set_date %></small>
                </td>
                <td class="text-right align-middle"><%= link_to (post.user) do %><%= image_tag post.user.get_profile_image(50,50), class:"card-image-top rounded-circle" %><% end %></td>
              </tr>
            </table>
          <% end %>
        </div>
      </div>
      <%= paginate @posts %>
    </div>
  </div>
</div>