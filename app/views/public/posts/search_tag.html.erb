<div class="container">
  <h5>タグが<%=@tag.name%>の投稿一覧</h5>
  <!--タグリスト-->
  <% @post_tags.each do |post|%>
    <%=link_to post.name,search_tag_path(tag_id: post.id) %>
    <%="(#{post.posts.count})" %>
  <% end %>
  <!--投稿を表示-->
  <% @posts.each do |post| %>
    <div class="card">
      <div class="card-body">
        <!--タイトル表示される文字数は２５文字までにしてます-->
        <h6 class="card-title">
          <%=link_to post_path(post.id) do %><%= post.title.truncate(25) %>
          <% end %>
        </h6>
      </div>
    </div>
  <% end %>
</div>