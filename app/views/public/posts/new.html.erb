<div class="container mb-5">
  <%= render 'public/shared/error_messages', resource: @post %>
  <div class="row mt-5">
    <div class="col-md-8 mx-auto">
      <div class="card shadow">
        <div class="card-header bg-dark text-white text-center">新規投稿</div>
        <div class="card-body">
          <%= form_with model: @post, url: posts_path, method: :post do |f| %>
            <%= render 'post_form', f: f %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>