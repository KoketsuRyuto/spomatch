<div class="container">
  <div class="row mt-5">
    <div class="col-md- mx-auto">
      <%= render "layouts/tags", tags: @tags %>
    </div>
    <div class="col-md-6 mx-auto">
      <h3 class="border-bottom">SPOMATCH BLOG</h3>
      <% @posts.each do |post| %>
        <table class="table table-sm table-borderless mt-3">
          <tr class="border-bottom">
            <td>
              <%= link_to post.title, post_path(post) %><br>
              <%= post.body.truncate(20) %>
            </td>
            <td class="text-right align-middle"><%= link_to (post.user) do %><%= image_tag post.user.get_profile_image(50,50), class:"card-image-top rounded-circle" %><% end %></td>
          </tr>
        </table>
      <% end %>
    </div>
    <div class="col-md-2 mx-auto">
      <%= render "layouts/sports", sports: @sports %>
    </div>
  </div>
</div>