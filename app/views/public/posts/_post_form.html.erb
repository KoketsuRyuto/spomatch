<div class="form-group">
  <%= f.label :title, "タイトル" %>
  <%= f.text_field :title, placeholder: "タイトル 30文字以内", class:"form-control" %> 
</div>

<div class="form-group">
  <%= f.label :body, "本文" %>
  <%= f.text_area :body, class:"form-control", rows: 15 %>
</div>

<div class="form-group">
  <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
    <div class="form-check form-check-inline">
      <%= tag.label class:"form-check-label", style: "display: inline-block;" do %>
        <%= tag.check_box class:"form-check-input" %>
        <%= tag.text %>
      <% end %>
    </div>
  <% end %>
</div>

<div class="actions text-center">
  <% if f.object.new_record? %>
    <%= f.submit '投稿', class:"btn btn-primary my-4 px-5" %>
  <% else %>
    <%= f.submit '更新', class:"btn btn-primary my-4 px-5" %>
  <% end %>
</div>