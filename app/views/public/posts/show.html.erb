<div class="container">
  <div class="row mt-5">
    <div class="col-md-2 mx-auto">
      <%= render 'layouts/tags', tags: @tags %>
    </div>
    <div class="col-md-6 mx-auto">
      <h4><%= @post.title %></h4>
      <div class="card">
        <div class="row g-0">
          <div class="col-md-3">
            <%= image_tag @post.user.get_profile_image(100,100), class:"card-image-top" %>
          </div>
          <div class="col-md-6">
            <div class="card-body">
              <div class="card-title"><h5><%= @post.user.name %></h5></div>
              <p class="card-text"><small class="text-muted"><%= @post.set_date %></small></p>
            </div>
          </div>
          <div class="col-md-3 my-auto">
            <% if @post.user == current_user %>
              <%= link_to '投稿編集', edit_post_path(@post), class:"btn btn-sm btn-secondary" %>
              <%= link_to '投稿削除', post_path(@post), method: :delete, class:"btn btn-sm btn-danger mt-2" %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="body mt-5">
        <%= simple_format(@post.body) %>
      </div>
      <hr width=100%>
      <div class="text-muted">
        <% if @post.favorited_by?(current_user) %>
          <%= link_to post_favorites_path(@post), method: :delete, style: "color: green;" do %>
            いいね！ <i class="fas fa-thumbs-up"></i> <%= @post.favorites.count %>
          <% end %>
        <% else %>
          <%= link_to post_favorites_path(@post), method: :post do %>
            いいね！ <i class="fas fa-thumbs-up"></i> <%= @post.favorites.count %>
          <% end %>
        <% end %>
      </div>
      <div class="mt-3">
        <p class="border-bottom"><i class="fas fa-comment-dots" style="color: #1e90ff;"></i> コメント <%= @post.post_comments.count %>件</p>
        <% if @post.post_comments.any? %>
          <% @post.post_comments.each do |post_comment| %>
            <p><%= image_tag post_comment.user.get_profile_image(40,40) %> <%= post_comment.user.name %></p>
            <div class="row">
              <div class="col-md-10">
                <p><%= post_comment.comment %><br><small class="text-muted"><%= post_comment.set_date %></small></p>
              </div>
              <div class="col-md-2">
                <% if post_comment.user == current_user %>
                  <%= link_to post_post_comment_path(post_comment.post,post_comment), method: :delete do %>
                    <i class="fas fa-trash-alt"></i>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="border-bottom text-center text-muted">コメントがまだありません</p>
        <% end %>
      </div>
      <div class="mt-3">
        <p><%= image_tag @post.user.get_profile_image(40,40), class:"card-image-top rounded-circle" %> <%= @post.user.name %></p>
        <div>
          <%= form_with model: [@post,@post_comment] do |f| %>
            <%= f.text_area :comment, rows: "5", placeholder: "コメントをここに", class:"form-control bg-light" %>
            <%= f.submit "コメントを投稿", class:"btn btn-success px-4 mt-3" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-2 mx-auto">
      <%= render 'layouts/sports', sports: @sports %>
    </div>
  </div>
</div>
