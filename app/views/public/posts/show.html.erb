<div class="container">
  <div class="row mt-5">
    <%= flash[:notice] %>
    <div class="col-md-2 mx-auto">
      <%= render 'layouts/tags', tags: @tags %>
    </div>
    <div class="col-md-6 mx-auto">
      <h4><%= @post.title %></h4>
      <div class="card">
        <div class="row g-0">
          <div class="col-md-3">
            <%= image_tag @post.user.get_profile_image(100,100), class:"card-image-top" %>
          </div>
          <div class="col-md-6">
            <div class="card-body">
              <div class="card-title"><h5><%= @post.user.name %></h5></div>
              <p class="card-text"><small class="text-muted"><%= @post.set_date %></small></p>
            </div>
          </div>
          <div class="col-md-3 my-auto">
            <% if @post.user == current_user %>
              <%= link_to '投稿編集', edit_post_path(@post), class:"btn btn-sm btn-secondary" %>
              <%= link_to '投稿削除', post_path(@post), method: :delete, class:"btn btn-sm btn-danger mt-2" %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="body mt-5">
        <%= simple_format(@post.body) %>
      </div>
      <hr width=100%>
      <div id="favorite-btn_<%= @post.id %>"  class="text-muted">
        <%= render 'public/favorites/favorite', post: @post %>
      </div>
      <div id="comment_counter">
        <%= render 'public/post_comments/comment_counter', post: @post %>
      </div>
      <div id="post_comment" class="mt-3">
        <%= render 'public/post_comments/comment', post: @post %>
      </div>
      <div class="mt-3">
        <%= render 'public/post_comments/form', post: @post, post_comment: @post_comment %>
      </div>
    </div>
    <div class="col-md-2 mx-auto">
      <%= render 'layouts/sports', sports: @sports %>
    </div>
  </div>
</div>
