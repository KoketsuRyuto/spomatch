<div class="container">
  <div class="row mt-5 mb-3 d-flex justify-content-center">
    <h4>ログイン</h4>
  </div>

  <%= form_with model: resource, url: new_admin_session_path do |f| %>
    <div class="col-md-6 mx-auto">
      <div class="form-group row mt-4">
        <%= f.label :email, "メールアドレス" %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>

      <div class="form-group row mt-4">
        <%= f.label :password, "パスワード" %><br/>
        <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
      </div>

      <div class="actions d-flex justify-content-center">
        <%= f.submit "ログイン", class:"btn btn-primary my-4" %>
      </div>
    </div>
  <% end %>
  <hr width="50%">
  <div class="row mt-5 d-flex justify-content-center">
    <h5>登録がお済みでない方はこちら</h5>
  </div>
  <div class="text-center">
    <%= render "public/shared/links" %>
  </div>
</div>

