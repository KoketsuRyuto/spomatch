<% if post.post_comments.any? %>
  <% post.active_comments.each do |post_comment| %>
    <p><%= link_to user_path(post_comment.user) do %><%= image_tag post_comment.user.get_profile_image(40,40), class:"rounded-circle" %><% end %> <%= post_comment.user.name %></p>
    <div class="row">
      <div class="col-md-10">
        <p><%= post_comment.comment %><br><small class="text-muted"><%= post_comment.set_date %></small></p>
      </div>
      <div class="col-md-2">
        <% if post_comment.user == current_user %>
          <%= link_to post_post_comment_path(post_comment.post,post_comment), method: :delete, "data-confirm" => "本当に削除しますか？", remote: true do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <p class="border-bottom text-center text-muted">コメントがまだありません</p>
<% end %>