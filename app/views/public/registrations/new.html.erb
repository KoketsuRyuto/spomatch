<div class="container">
  <div class="row mt-5 mb-3 d-flex justify-content-center">
    <h4>新規会員登録</h4>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="col-md-6 mx-auto">
      <div class="form-group row mt-4">
        <%= f.label :name, "ユーザーネーム" %><br/>
        <%= f.text_field :name, placeholder: "ユーザーネーム", class:"form-control" %>
      </div>
      <div class="form-group row mt-4">
        <%= f.label :email, "メールアドレス" %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example", class:"form-control" %>
      </div>

      <div class="form-group row mt-4">
        <%= f.label :password, "パスワード（6文字以上）" %><br/>
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
      </div>

      <div class="form-group row mt-4">
        <%= f.label :password_confirmation, "パスワード（確認用）" %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
      </div>

      <div class="actions d-flex justify-content-center">
        <%= f.submit "新規登録", class:"btn btn-success my-4" %>
      </div>
    </div>
  <% end %>
  <hr width="60%">
  <div class="row mt-5 d-flex justify-content-center">
    <h5>既に登録済みの方はこちら</h5>
  </div>
  <div class="row d-flex justify-content-center">
    <%= render "public/shared/links" %>
  </div>
</div>