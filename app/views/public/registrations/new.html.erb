<div class="container">
  <div class="row mt-5 mb-3 d-flex justify-content-center">
    <div class="col-md-6 mx-auto">
      <div class="card shadow">
        <div class="card-header text-center bg-dark text-white">新規会員登録</div>
        <div class="card-body">
          <%= form_with model: resource, url: user_registration_path, method: :post do |f| %>
            <%= render "public/shared/error_messages", resource: resource %>
              <div class="form-group row m-2">
                <%= f.label :name, "ユーザーネーム" %><br/>
                <%= f.text_field :name, class:"form-control", autofocus: true %>
              </div>
              <div class="form-group row m-2">
                <%= f.label :email, "メールアドレス" %><br/>
                <%= f.email_field :email, autocomplete: "email", placeholder: "example@example", class:"form-control" %>
              </div>

              <div class="form-group row m-2">
                <%= f.label :password, "パスワード（6文字以上）" %><br/>
                <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
              </div>

              <div class="form-group row m-2">
                <%= f.label :password_confirmation, "パスワード（確認用）" %><br/>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
              </div>

              <div class="actions d-flex justify-content-center">
                <%= f.submit "新規登録", class:"btn btn-success px-5 my-3" %>
              </div>
          <% end %>
          <hr width="70%">
          <div class="row mt-3 d-flex justify-content-center">
            <h6>既に登録済みの方はこちら</h6>
          </div>
          <div class="row d-flex justify-content-center">
            <%= render "public/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>