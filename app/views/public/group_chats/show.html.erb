<div class="container mb-5">
  <div class="errors"><%= render 'public/shared/error_messages', resource: @group_chat %></div>
  <div class="row mt-4">
    <div class="col-md-2 mt-4">
      <h4 class="text-center">メンバー</h4>
      <ul>
        <% @group.users.each do |user| %>
          <p><%= image_tag user.get_profile_image(50,50), class:"rounded-circle" %> <%= user.name %></p>
        <% end %>
      </ul>
    </div>
    <div class="col-md-8 mx-auto">
      <div class="group-title mt-3"><%= @group.name %></div>
      <div id="group_chats">
        <div class="chat-body">
          <%= render 'chats', group_chats: @group_chats %>
        </div>
        <div class="chat-form">
          <%= form_with model: @group_chat ,url: group_group_chats_path, method: :post, local: false do |f| %>
            <div class="row mx-auto">
              <div class="col-md-11 p-0 chat-text">
                <%= f.text_field :content, placeholder: 'メッセージを入力してください', class:"form-control" %>
              </div>
              <div class="col-md-1 p-0 chat-btn">
                <%= f.submit '送信', class:"btn btn-success" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>