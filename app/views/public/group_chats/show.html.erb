<div class="container">
  <div class="row mt-5">
    <div class="col-md-8 mx-auto">
      <div id="group_chats">
        <% @group_chats.each do |group_chat| %>
          <% if group_chat.user_id == current_user.id %>
            <p style="text-align: right;"><%= group_chat.content %></p>
          <% else %>
            <p style="text-align: left;"><%= image_tag group_chat.user.get_profile_image(50,50), class:"rounded-circle" %><%= group_chat.content %></p>
          <% end %>
        <% end %>
        <%= form_with model: @group_chat ,url: group_group_chats_path, method: :post do |f| %>
          <div class="chat-form">
            <div class="col-md-6 px-0">
              <%= f.text_field :content, placeholder: 'メッセージを入力してください', class:"form-control" %>
            </div>
            <%= f.submit '送信', class:"btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>