<% if posts.any? %>
  <% posts.each do |post| %>
    <table class="table table-sm table-borderless mt-3">
      <tr>
        <td class="text-right align-middle" scope="col" style="width: 20%;">
          <%= link_to (post.user) do %><%= image_tag post.user.get_profile_image(50,50), class:"card-image-top rounded-circle" %><% end %>
        </td>
        <td scope="col" style="width: 80%;">
          <%= link_to post.title, post_path(post) %><br>
          <%= post.body.truncate(30) %><br>
          <small class="text-muted"><%= post.set_date %></small>
        </td>
      </tr>
    </table>
  <% end %>
<% else %>
  <h6 class="text-center m-5">投稿がまだありません</h6>
<% end %>