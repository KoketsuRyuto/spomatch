<% if posts.any? %>
  <% posts.each do |post| %>
    <table class="table table-sm table-borderless mt-3">
      <tr>
        <td class="text-right"><%= link_to (post.user) do %><%= image_tag post.user.get_profile_image(50,50), class:"card-image-top rounded-circle" %><% end %></td>
        <td>
          <%= link_to post.title, post_path(post) %><br>
          <%= post.body.truncate(20) %>
        </td>
      </tr>
    </table>
  <% end %>
<% else %>
  <h6 class="m-5">投稿がまだありません</h6>
<% end %>