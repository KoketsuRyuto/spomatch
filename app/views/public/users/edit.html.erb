<div class="container">
  <div class="row mt-5 mx-auto">
    <div class="col-md-6 mx-auto">
      <div class="card shadow mx-auto">
        <h5 class="card-header text-center">マイプロフィール</h5>
        <div class="card-body mx-auto">
          <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
            <div class="form-group mx-5 mt-4">
              <%= f.label :profile_image, "プロフィール画像" %><br>
              <%= f.file_field :profile_image %>
            </div>
            <div class ="form-group mx-5 mt-3">
              <%= f.label :name, "ユーザーネーム" %><br>
              <%= f.text_field :name, class:"form-control" %>
            </div>
            <div class="action my-5 text-center">
              <%= f.submit "変更する", class:"btn btn-primary" %>
            </div>
          <% end %>
          <hr width="70%">
          <div class="text-center">
            <p class="text-danger mt-2">退会手続き</p>
            <%= link_to "退会へ", users_confilm_path, class:"btn btn-secondary px-4 mt-2 mb-5" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>