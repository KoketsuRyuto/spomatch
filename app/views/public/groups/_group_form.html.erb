<% if current_page?('/groups/new') %>
  <%= form_with model: group, url: groups_path, method: :post do |f| %>
    <div class="form-group">
      <%= f.label :name, "グループ名" %>
      <%= f.text_field :name, class:"form-control col-md-5" %>
    </div>
  
    <div class="form-group">
      <%= f.label :group_image, "グループ画像" %><br>
      <%= f.file_field :group_image %>
    </div>
  
    <div class="form-group">
      <%= f.label :introduction, "紹介" %>
      <%= f.text_area :introduction, class:"form-control", rows: 5 %>
    </div>
  
    <div class="form-group">
      <label>ジャンル</label><br>
      <%= f.collection_check_boxes(:sport_ids, Sport.all, :id, :name) do |sport| %>
        <div class="form-check form-check-inline">
          <%= sport.label class:"form-check-label", style: "display: inline-block;" do %>
            <%= sport.check_box class:"form-check-input" %>
            <%= sport.text %>
          <% end %>
        </div>
      <% end %>
    </div>
  
    <div class="actions text-center">
      <%= f.submit '作成', class:"btn btn-primary my-4 px-5" %>
    </div>
  <% end %>
<% else %>
  <%= form_with model: group, url: group_path, method: :patch do |f| %>
    <div class="form-group">
      <%= f.label :name, "グループ名" %>
      <%= f.text_field :name, class:"form-control col-md-5" %>
    </div>
  
    <div class="form-group">
      <%= f.label :group_image, "グループ画像" %><br>
      <%= f.file_field :group_image %>
    </div>
  
    <div class="form-group">
      <%= f.label :introduction, "紹介" %>
      <%= f.text_area :introduction, class:"form-control", rows: 5 %>
    </div>
  
    <div class="form-group">
      <label>ジャンル</label><br>
      <%= f.collection_check_boxes(:sport_ids, Sport.all, :id, :name) do |sport| %>
        <div class="form-check form-check-inline">
          <%= sport.label class:"form-check-label", style: "display: inline-block;" do %>
            <%= sport.check_box class:"form-check-input" %>
            <%= sport.text %>
          <% end %>
        </div>
      <% end %>
    </div>
  
    <div class="actions text-center">
      <%= f.submit '更新', class:"btn btn-primary my-4 px-5" %>
    </div>
  <% end %>
<% end %>